<% layout('layout/boilerplate.ejs') %>

<link rel="stylesheet" href="/css/login.css">


<div class="auth-page">
  <div class="auth-container">

    <div class="card auth-card shadow-lg">
      <div class="card-body p-4 p-md-5">

        <div class="text-center mb-4">
          <h4 class="auth-title">Create Account</h4>
          <p class="text-muted small">Join us and start booking your arena.</p>
        </div>

        <form method="POST" action="/register">

          <div class="mb-3">
            <label for="username" class="form-label small fw-bold text-uppercase text-muted">Username</label>
            <div class="input-group">
              <span class="input-group-text bg-light border-end-0 text-muted">
                <i class="bi bi-person"></i>
              </span>
              <input type="text" class="form-control border-start-0 ps-0 bg-light" id="username" placeholder="Choose a username" name="username" required>
            </div>
          </div>

          <div class="mb-3">
            <label for="email" class="form-label small fw-bold text-uppercase text-muted">Email Address</label>
            <div class="input-group">
              <span class="input-group-text bg-light border-end-0 text-muted">
                <i class="bi bi-envelope"></i>
              </span>
              <input type="email" class="form-control border-start-0 ps-0 bg-light" id="email" placeholder="name@example.com" name="email" required>
            </div>
          </div>

          <div class="mb-4">
            <label for="password" class="form-label small fw-bold text-uppercase text-muted">Password</label>
            <div class="input-group">
              <span class="input-group-text bg-light border-end-0 text-muted">
                <i class="bi bi-lock"></i>
              </span>
              <input type="password" class="form-control border-start-0 ps-0 bg-light" id="password" placeholder="Create a strong password" name="password" required>
            </div>
          </div>

          <div class="d-grid mb-4">
            <button class="btn btn-apex-primary py-2 rounded-pill fw-bold">Sign Up</button>
          </div>

          <div class="text-center">
            <p class="small text-muted mb-0">
              Already have an account?
              <a class="auth-link fw-bold" href="/login">Login here</a>
            </p>
          </div>

        </form>
      </div>
    </div>

    <div class="text-center mt-4">
      <a href="/" class="text-white-50 small text-decoration-none hover-white">
        <i class="bi bi-house-door me-1"></i> Back to Home
      </a>
    </div>

  </div>
</div>