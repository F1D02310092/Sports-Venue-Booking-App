<% layout('layout/boilerplate.ejs') %>

<div class="container">
  <h1>Payment Failed!</h1>


  <div class="booking-details">
    <h3>Booking Details:</h3>
    <p>Field: <%= booking.field.name %></p>
    <p>Date: <%= booking.date.toLocaleDateString() %></p>
    <p>Time: <%= minutesToHHMM(booking.startTime) %> - <%= minutesToHHMM(booking.endTime + 60) %></p>
    <p>Total: Rp <%= booking.totalPrice.toLocaleString() %></p>
  </div>

  <a href="/fields/">Back</a>
</div>