<% layout('layout/boilerplate.ejs') %>

<div class="container my-4">
  <div class="card shadow-sm rounded-3">
    <div class="card-body">
      <div class="row">
        <div class="col-md-6 border-end">
          <h5 class="fw-bold mb-3">Payment Details</h5>

          <span class="badge bg-secondary mb-2"> ORDER ID: <%= booking.orderID %> </span>

          <p class="mb-1"><strong>Field:</strong> <%= booking.field.name %></p>

          <p class="mb-1"><strong>Date:</strong> <%= formattedDate(booking.date) %></p>

          <p class="mb-1">
            <strong>Time Session:</strong>
            <%= minutesToHHMM(booking.startTime) %> - <%= minutesToHHMM(booking.endTime + 60) %>
          </p>

          <% if(currUser && currUser.role === 'admin'){ %>
          <div class="mt-3">
            <a target="_blank" href="https://dashboard.sandbox.midtrans.com/beta/transactions?detail=<%= booking.transactionID %>" class="btn btn-info"> Check Midtrans </a>
          </div>
          <% } %>
        </div>

        <div class="col-md-6">
          <h5 class="fw-bold mb-3">User Details</h5>

          <p class="mb-1"><strong>Username:</strong> <%= booking.user.username %></p>

          <p class="mb-1"><strong>Email:</strong> <%= booking.user.email %></p>
        </div>
      </div>
    </div>

    <div class="card-footer text-center bg-light">
      <small class="text-muted fst-italic">Thank you for using our services!</small>
    </div>
  </div>
</div>