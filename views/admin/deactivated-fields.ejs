<% layout('layout/boilerplate.ejs') %>

<div class="container">
  <% if(fields && fields.length > 0){%>
  <div class="row row-cols-1 row-cols-md-2 g-4">
    <% for (let f of fields) { %>

    <div class="col">
      <div class="card h-100">
        <% if (f.images && f.images.length > 0) { %>
        <img src="<%= f.images[0].thumbnail %>" class="card-img-top rounded" alt="<%= f.name %>" />
        <% } %>

        <div class="card-body">
          <h5 class="card-title"><%= f.name %></h5>

          <p class="my-2">
            <b> Open: <%= minutesToHHMM(f.openTime) %> â€“ Close: <%= minutesToHHMM(f.closeTime) %> </b>
          </p>

          <p class="card-subtitle mb-2 text-body-secondary">Rp<%= f.price %></p>
        </div>


        <form action="/admin/fields/<%= f.fieldID %>/reactivate" method="POST" class="px-3 mb-2">
          <button class="btn btn-secondary">Reactivate</button>
        </form>


      </div>
    </div>

    <% } %>
  </div>
  <% } else {%>
  <div class="alert alert-info my-4">Nothing was found!</div>

  <% }%>
</div>