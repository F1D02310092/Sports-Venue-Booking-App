<% layout('layout/boilerplate.ejs') %>

<link rel="stylesheet" href="/css/admin-show-page.css">

<div class="container py-5">

  <div class="d-flex justify-content-between align-items-center mb-4">
    <div class="d-flex align-items-center gap-2">
      <span class="badge bg-apex-dark px-3 py-2 rounded-pill shadow-sm">
        <i class="bi bi-shield-lock-fill me-1"></i> ADMIN DASHBOARD
      </span>

    </div>

  </div>

  <div class="row g-4 mb-5">

    <div class="col-lg-7">
      <% if(field.images.length > 0){ %>
      <div id="adminCarousel" class="carousel slide carousel-fade shadow-lg rounded-4 overflow-hidden">
        <div class="carousel-inner">
          <% field.images.forEach((img, i) => { %>
          <div class="carousel-item <%= i === 0 ? 'active' : '' %>">
            <img crossorigin="anonymous" src="<%= img.url %>" class="d-block w-100 field-main-img" alt="<%= field.name %>" />
          </div>
          <% }); %>
        </div>

        <% if(field.images.length > 1) { %>
        <button class="carousel-control-prev" type="button" data-bs-target="#adminCarousel" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#adminCarousel" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
        </button>
        <% } %>
      </div>
      <% } else { %>
      <div class="rounded-4 bg-secondary d-flex align-items-center justify-content-center text-white field-main-img">
        No Images Available
      </div>
      <% } %>
    </div>

    <div class="col-lg-5">
      <div class="card border-0 shadow-sm h-100 p-4 sticky-panel">
        <h1 class="field-title mb-2"><%= field.name %></h1>
        <h2 class="field-price mb-4">Rp<%= field.price.toLocaleString('id-ID') %> <span class="fs-6 text-muted fw-normal">/ hour</span></h2>

        <div class="d-flex gap-3 mb-4 text-muted small">
          <div class="d-flex align-items-center gap-2">
            <i class="bi bi-clock-fill text-accent"></i>
            <span><%= minutesToHHMM(field.openTime) %> - <%= minutesToHHMM(field.closeTime) %></span>
          </div>
          <div class="d-flex align-items-center gap-2">
            <i class="bi bi-geo-alt-fill text-accent"></i>
            <span>Apex Center</span>
          </div>
        </div>

        <hr class="border-secondary opacity-10 mb-4">

        <label class="form-label fw-bold text-uppercase small text-muted">Select Date</label>
        <form action="" method="GET" class="mb-3">
          <div class="input-group">
            <span class="input-group-text bg-white border-end-0"><i class="bi bi-calendar-check"></i></span>
            <input type="date" name="date" class="form-control border-start-0 ps-0" value="<%= queryDateStr %>" min="<%= minDate %>" max="<%= maxDate %>" onchange="this.form.submit()" />
          </div>
        </form>

        <div class="alert alert-soft-dark d-flex align-items-center gap-2" role="alert">
          <i class="bi bi-terminal-fill"></i>
          <div><strong><%= queryDateFormatted %></strong></div>
        </div>

        <a href="/fields/<%= field.fieldID %>/edit" class="btn btn-outline-dark rounded-pill px-4 btn-sm fw-bold">
          <i class="bi bi-pencil-square me-1"></i> Edit Field
        </a>
      </div>
    </div>
  </div>

  <section class="mb-5">
    <div class="d-flex align-items-center justify-content-between mb-4">
      <h3 class="section-heading">Slot Management</h3>
      <div class="slot-legend d-none d-md-flex gap-3 text-small">
        <span class="d-flex align-items-center gap-1"><span class="dot available"></span> Empty</span>
        <span class="d-flex align-items-center gap-1"><span class="dot selected"></span> Selected</span>
        <span class="d-flex align-items-center gap-1"><span class="dot booked"></span> Booked</span>
        <span class="d-flex align-items-center gap-1"><span class="dot reserved"></span> Reserved</span>
      </div>
    </div>

    <form action="/admin/fields/<%= field.fieldID %>/m-booking" method="GET" id="form-booking">
      <input type="hidden" name="date" value="<%= queryDateStr %>" />

      <div class="slot-grid mb-4">
        <% for(let slot of timeSlots){ %>

        <% 
            let slotStatus = 'available'; 
            let isDisabled = false;
            let labelText = 'Available';
            
            if(successBook && successBook.has(slot)) {
               const bookData = successBook.get(slot);
               
               if(bookData.status === 'success') {
                  slotStatus = 'booked';
                  isDisabled = true;
                  labelText = 'Booked';
               } else if(bookData.status === 'pending') {
                  slotStatus = 'reserved';
                  isDisabled = true; // Admin tidak bisa menimpa booking pending User
                  labelText = 'Reserved (' + bookData.reservedTime + 'm)';
               }
            } 
          %>

        <div class="slot-item">
          <input type="checkbox" class="btn-check" id="slot-<%= slot %>" name="slots" value="<%= slot %>" <%= isDisabled ? 'disabled' : '' %> autocomplete="off" />

          <label class="slot-card <%= slotStatus %>" for="slot-<%= slot %>">
            <div class="slot-time"><%= minutesToHHMM(slot) %> - <%= minutesToHHMM(slot + 60) %></div>
            <div class="slot-status"><%= labelText %></div>

            <div class="slot-icon">
              <% if(slotStatus === 'booked') { %> <i class="bi bi-lock-fill"></i> <% } %>
              <% if(slotStatus === 'reserved') { %> <i class="bi bi-hourglass-split"></i> <% } %>
              <% if(slotStatus === 'available') { %> <i class="bi bi-plus-lg"></i> <% } %>
            </div>
          </label>
        </div>
        <% } %>
      </div>

      <div class="d-grid gap-2 col-md-4 mx-auto">
        <button class="btn btn-apex-primary py-3 rounded-pill shadow-lg">
          <i class="bi bi-check-lg me-2"></i> Confirm Manual Booking
        </button>
      </div>
    </form>
  </section>

</div>

<script src="/js/showField.js"></script>